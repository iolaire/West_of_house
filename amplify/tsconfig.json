{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es2022"],
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "$amplify/*": [
        "../.amplify/generated/*"
      ]
    }
  }
}