{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "{\"createdOn\":\"Mac\",\"createdBy\":\"Amplify\",\"createdWith\":\"14.0.2\",\"stackType\":\"storage-DynamoDB\",\"metadata\":{\"whyContinueWithGen1\":\"Prefer not to answer\"}}",
  "Parameters": {
    "partitionKeyName": {
      "Type": "String",
      "Default": "session_id"
    },
    "partitionKeyType": {
      "Type": "String",
      "Default": "S"
    },
    "env": {
      "Type": "String"
    },
    "tableName": {
      "Type": "String",
      "Default": "GameSessions"
    }
  },
  "Conditions": {
    "ShouldNotCreateEnvResources": {
      "Fn::Equals": [
        {
          "Ref": "env"
        },
        "NONE"
      ]
    }
  },
  "Resources": {
    "DynamoDBTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "AttributeDefinitions": [
          {
            "AttributeName": "session_id",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "session_id",
            "KeyType": "HASH"
          }
        ],
        "BillingMode": "PAY_PER_REQUEST",
        "TableName": {
          "Fn::If": [
            "ShouldNotCreateEnvResources",
            {
              "Ref": "tableName"
            },
            {
              "Fn::Join": [
                "",
                [
                  {
                    "Ref": "tableName"
                  },
                  "-",
                  {
                    "Ref": "env"
                  }
                ]
              ]
            }
          ]
        },
        "TimeToLiveSpecification": {
          "AttributeName": "ttl",
          "Enabled": true
        },
        "StreamSpecification": {
          "StreamViewType": "NEW_AND_OLD_IMAGES"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "GameSessions"
          },
          {
            "Key": "Project",
            "Value": "west-of-haunted-house"
          },
          {
            "Key": "ManagedBy",
            "Value": "vedfolnir"
          },
          {
            "Key": "Environment",
            "Value": {
              "Ref": "env"
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "Name": {
      "Value": {
        "Ref": "DynamoDBTable"
      }
    },
    "Arn": {
      "Value": {
        "Fn::GetAtt": [
          "DynamoDBTable",
          "Arn"
        ]
      }
    },
    "StreamArn": {
      "Value": {
        "Fn::GetAtt": [
          "DynamoDBTable",
          "StreamArn"
        ]
      }
    },
    "PartitionKeyName": {
      "Value": {
        "Ref": "partitionKeyName"
      }
    },
    "PartitionKeyType": {
      "Value": {
        "Ref": "partitionKeyType"
      }
    },
    "Region": {
      "Value": {
        "Ref": "AWS::Region"
      }
    }
  }
}